{{!-- Main page handlebars --}}


{{!-- main content --}}
<div class='container indexContainer'>
  <br>
  <div class='row'>

    <div class='col s12'>
      <h4 class="center">Take your gaming out of the box.</h4>
      <div class='row'>
        <form id="gameSearchForm" class="unBoxInput">
          <div class="input-field">
            <input placeholder="Search for a game" id="gameSearchInput" type="text"
              class="validate center-align col s6 offset-s3">
          </div>
        </form>
      </div>
      <div class="row cardFeed">
        
          {{#each games}}
          <div class='cardHolder col l4 m6 s12'>
            <div class="card indexCard">
              <div class="card-image">
                <img class="gameCardImage" src="{{this.dataValues.image_url}}" alt ="{{this.dataValues.name}} box art">
              </div>
              <div class="card-content row cardContent">
                <h5 class='cardTitle'>{{this.dataValues.name}}</h5> <span
                  class='cardText'>{{this.dataValues.min_players}} - {{this.dataValues.max_players}} players</span>
                <p class='cardText flow-text'>Category: {{this.dataValues.category}}</p>

              </div>
              <div class='row'>
                <button class='btn gameAddButton col s3 offset-s2' data-id="{{this.dataValues.id}}"><i
                    class="fas fa-plus-circle"></i> Add</button>
                <a href="/games/{{this.dataValues.id}}"><button class='btn toGamePage col s3 offset-s1'
                    data-id="{{this.dataValues.id}}"><i class="fas fa-puzzle-piece"></i> Info</button></a>

              </div>

            </div>
          </div>
          {{/each}}
        
      </div>

    </div>
  



  </div>
</div>